-- Plain Bring All GUI for Brookhaven
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local bringEnabled = false
local bringLoop
local bringDistance = 5

-- GUI Setup
local screenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
screenGui.Name = "BringAllGUI"

-- Enable Button
local enableButton = Instance.new("TextButton", screenGui)
enableButton.Size = UDim2.new(0, 200, 0, 50)
enableButton.Position = UDim2.new(0.5, -100, 0.3, 0)
enableButton.Text = "Enable Bring All"
enableButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)

-- Disable Button
local disableButton = Instance.new("TextButton", screenGui)
disableButton.Size = UDim2.new(0, 200, 0, 50)
disableButton.Position = UDim2.new(0.5, -100, 0.4, 0)
disableButton.Text = "Disable Bring All"
disableButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)

-- Distance Box
local distanceBox = Instance.new("TextBox", screenGui)
distanceBox.Size = UDim2.new(0, 200, 0, 50)
distanceBox.Position = UDim2.new(0.5, -100, 0.5, 0)
distanceBox.PlaceholderText = "Distance (studs)"
distanceBox.Text = tostring(bringDistance)
distanceBox.ClearTextOnFocus = false

-- Bring function
local function bringPlayers()
    bringLoop = task.spawn(function()
        while bringEnabled do
            local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if root then
                for _, player in pairs(Players:GetPlayers()) do
                    if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                        local theirRoot = player.Character.HumanoidRootPart
                        theirRoot.CFrame = root.CFrame + Vector3.new(math.random(-bringDistance, bringDistance), 1, math.random(-bringDistance, bringDistance))
                    end
                end
            end
            task.wait(0.5)
        end
    end)
end

-- Button callbacks
enableButton.MouseButton1Click:Connect(function()
    if not bringEnabled then
        bringEnabled = true
        bringPlayers()
    end
end)

disableButton.MouseButton1Click:Connect(function()
    bringEnabled = false
    if bringLoop then
        task.cancel(bringLoop)
    end
end)

-- Distance update
distanceBox.FocusLost:Connect(function()
    local val = tonumber(distanceBox.Text)
    if val and val > 0 then
        bringDistance = val
    else
        distanceBox.Text = tostring(bringDistance)
    end
end)
